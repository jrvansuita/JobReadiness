<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".realstate.RealStateListActivity">

    <include
        android:id="@+id/search_toolbar"
        layout="@layout/content_search_toolbar" />

    <TextView
        android:id="@+id/results_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/item_result"
        android:textColor="@color/grey_200"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_toolbar" />

    <ImageView
        android:id="@+id/chevron_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:background="@drawable/ic_chevron_down"
        android:backgroundTint="@color/blue_400"
        app:layout_constraintBottom_toBottomOf="@id/results_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/results_text" />

    <TextView
        android:id="@+id/results_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_filters"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/chevron_down"
        app:layout_constraintEnd_toStartOf="@id/chevron_down"
        app:layout_constraintTop_toTopOf="@id/chevron_down" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_property"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/results_text"
        tools:listitem="@layout/item_adapter_realstate" />

</androidx.constraintlayout.widget.ConstraintLayout>