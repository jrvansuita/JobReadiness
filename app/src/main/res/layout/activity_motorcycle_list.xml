<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".moto.MotorcycleListActivity">

    <include
        android:id="@+id/search_toolbar"
        layout="@layout/content_search_toolbar" />

    <TextView
        android:id="@+id/text_motorcycle_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_500"
        android:text="@string/item_result"
        android:textColor="@color/grey_200"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_toolbar" />

    <TextView
        android:id="@+id/text_motorcycle_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_filters"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_motorcycle_chevron_down"
        app:layout_constraintEnd_toStartOf="@+id/image_motorcycle_chevron_down"
        app:layout_constraintTop_toTopOf="@+id/image_motorcycle_chevron_down" />

    <ImageView
        android:id="@+id/image_motorcycle_chevron_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_500"
        android:background="@drawable/ic_chevron_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_motorcycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_motorcycle_result"
        tools:listitem="@layout/item_adapter_motorcycle" />

</androidx.constraintlayout.widget.ConstraintLayout>