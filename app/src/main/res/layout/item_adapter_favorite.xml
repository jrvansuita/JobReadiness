<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_500">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_picture"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_marginStart="@dimen/margin_500"
        android:foreground="@color/grey_100"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_motorcycle" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_200"
        android:layout_marginEnd="@dimen/margin_200"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="@id/card_item_picture"
        app:layout_constraintTop_toTopOf="@id/card_item_picture">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_200"
            android:background="@drawable/ic_favorite"
            android:backgroundTint="@color/blue_400" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_item_favorite_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="@dimen/margin_500"
        android:textColor="@color/grey_800"
        android:textSize="@dimen/default_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_item_picture"
        app:layout_constraintTop_toTopOf="@id/card_item_picture"
        tools:text="Apartamento em Barueri 2 Suítes" />

    <TextView
        android:id="@+id/text_item_favorite_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/margin_500"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_item_favorite_title"
        app:layout_constraintTop_toBottomOf="@id/text_item_favorite_title"
        tools:text="R$399.000,00" />

    <TextView
        android:id="@+id/text_item_favorite_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/margin_500"
        android:textColor="@color/grey_200"
        android:textSize="@dimen/default_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_item_favorite_price"
        app:layout_constraintTop_toBottomOf="@id/text_item_favorite_price"
        tools:text="Barueri" />

    <TextView
        android:id="@+id/text_item_favorite_local"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/margin_500"
        android:textColor="@color/grey_200"
        android:textSize="@dimen/default_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_item_favorite_title"
        app:layout_constraintTop_toBottomOf="@id/text_item_favorite_description"
        tools:text="105m²" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_500"
        android:background="@color/grey_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_item_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>