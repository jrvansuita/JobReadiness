<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_500">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_image"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_marginStart="@dimen/margin_500"
        android:contentDescription="@null"
        android:foreground="@color/grey_100"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_item_truck_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_200"
        android:layout_marginEnd="@dimen/margin_200"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="@id/card_item_image"
        app:layout_constraintTop_toTopOf="@id/card_item_image">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_200"
            android:background="@drawable/ic_favorite"
            android:contentDescription="@string/favorite_description" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_item_truck_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="@dimen/margin_500"
        android:textColor="@color/grey_800"
        android:textSize="@dimen/default_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_item_image"
        app:layout_constraintTop_toTopOf="@id/card_item_image"
        tools:text="Volkswagen Fox 1.6 Connect" />

    <TextView
        android:id="@+id/text_item_truck_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/margin_500"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_item_truck_name"
        app:layout_constraintTop_toBottomOf="@id/text_item_truck_name"
        tools:text="$ 2.200.000" />

    <TextView
        android:id="@+id/text_item_truck_description_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/margin_500"
        android:textColor="@color/grey_200"
        android:textSize="@dimen/default_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_item_truck_price"
        app:layout_constraintTop_toBottomOf="@id/text_item_truck_price"
        tools:text="2019 - 37.000 Km" />

    <TextView
        android:id="@+id/text_item_truck_description_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/margin_500"
        android:textColor="@color/grey_200"
        android:textSize="@dimen/default_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_item_truck_name"
        app:layout_constraintTop_toBottomOf="@id/text_item_truck_description_one"
        tools:text="Bs.As. G.B.A. Norte" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_500"
        android:background="@color/grey_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_item_image" />

</androidx.constraintlayout.widget.ConstraintLayout>